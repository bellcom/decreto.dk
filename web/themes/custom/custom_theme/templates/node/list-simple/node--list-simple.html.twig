{% set classes = [
  node.bundle|clean_class,
  node.isPromoted() ? 'is-promoted',
  node.isSticky() ? 'is-sticky',
  not node.isPublished() ? 'is-unpublished',
  view_mode ? view_mode|clean_class,
  'clearfix',
] %}

<a href="{{ url }}"
   class="element-wrapper-link entity-list-simple">

  <!-- Begin - icon -->
  <div class="entity-list-simple__icon">
      <span class="initial-icon initial-icon--small" data-toggle="tooltip" title="{{ label_raw }}">
        {{ label_initials}}
      </span>
  </div>
  <!-- End - icon -->

  <!-- Begin - content -->
  <div class="entity-list-simple__content">

    <div class="entity-list-simple__heading">
      <h2
        class="entity-list-simple__heading__title heading-h4">{{ label }}</h2>
    </div>

  </div>
  <!-- End - content -->

</a>
